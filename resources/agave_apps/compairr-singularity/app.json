        "minCardinality": 1,
        "maxCardinality": 1,
        "ontology": [
          "xsd:string"
        ]
      }
    },
    {
      "id": "singularity_image",
      "value": {
        "visible": false,
        "required": true,
        "type": "string",
        "default": "CompAIRR-1.5.1.sif"
